{
  "name": "lume",
  "version": "3.2.0",
  "description": "A desktop application that tracks and visualizes time spent on tasks and applications",
  "main": "dist/main/main.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "start": "electron dist/main/main.js",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron dist/main/main.js",
    "build": "npm run build:react && npm run build:electron && npm run build:mcp",
    "build:react": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json && tsc-alias -p tsconfig.electron.json",
    "build:mcp": "tsc -p tsconfig.mcp.json && tsc-alias -p tsconfig.mcp.json && cp src/mcp/package.json dist/mcp/mcp/package.json && node scripts/make-executable.js dist/mcp/mcp/server.js",
    "watch:electron": "concurrently \"tsc -p tsconfig.electron.json --watch\" \"tsc-alias -p tsconfig.electron.json --watch\"",
    "watch:mcp": "tsc -p tsconfig.mcp.json --watch",
    "dev:mcp": "npm run build:mcp && node dist/mcp/mcp/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder"
  },
  "author": {
    "name": "Lume Team",
    "email": "team@lume.app"
  },
  "license": "MIT",
  "keywords": [
    "time tracking",
    "productivity",
    "desktop app",
    "electron",
    "react"
  ],
  "build": {
    "appId": "com.lume.app",
    "productName": "Lume",
    "win": {
      "icon": "src/public/logo1.png",
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "icon": "src/public/logo1.png",
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "icon": "src/public/logo1.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "files": [
      "dist/**/*",
      "src/public/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "extraResources": [
      {
        "from": "dist/mcp/mcp",
        "to": "mcp"
      }
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@modelcontextprotocol/sdk": "^1.20.0",
    "@sentry/electron": "^7.2.0",
    "@tanstack/react-virtual": "^3.13.12",
    "better-sqlite3": "^12.4.1",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.23.24",
    "i18next": "^25.6.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.545.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.65.0",
    "react-hot-toast": "^2.6.0",
    "react-i18next": "^16.0.1",
    "recharts": "^3.2.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.37.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "terser": "^5.37.0",
    "ts-jest": "^29.4.5",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "wait-on": "^8.0.5"
  }
}
