{
  "name": "lume",
  "version": "1.0.0",
  "description": "A desktop application that tracks and visualizes time spent on tasks and applications",
  "main": "dist/main/main.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "start": "electron dist/main/main.js",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron dist/main/main.js",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "watch:electron": "tsc -p tsconfig.electron.json --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder"
  },
  "author": "Lume Team",
  "license": "MIT",
  "keywords": [
    "time tracking",
    "productivity",
    "desktop app",
    "electron",
    "react"
  ],
  "dependencies": {
    "@sentry/electron": "^7.1.1",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^4.7.0",
    "better-sqlite3": "^11.10.0",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "i18next": "^25.5.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.0.0",
    "sqlite3": "^5.1.7",
    "typescript": "^5.9.3",
    "vite": "^6.3.6",
    "wait-on": "^8.0.5"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.37.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.1.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14"
  }
}
